{
  "manifest_version": 3,
  "name": "Super Speedy Dial",
  "version": "3.0.1",

  "browser_specific_settings": {
    "gecko": {
      "id": "wilshomepageaddon@gmail.com"
    }
  },

  "description": "Opera inspired speed dial page for your bookmarks",

  "action": {
    "default_icon": "logo.png",
    "default_title": "Super Speedy Dial"
  },

  "chrome_url_overrides": {
    "newtab": "index.html"
  },

  "permissions": ["bookmarks", "storage", "unlimitedStorage", "tabHide"],
  "host_permissions": ["<all_urls>"]
}
