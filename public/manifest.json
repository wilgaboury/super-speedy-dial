{
  "manifest_version": 2,
  "name": "Super Speedy Dial",
  "version": "3.0.1",

  "browser_specific_settings": {
    "gecko": {
      "id": "wilshomepageaddon@gmail.com"
    }
  },

  "description": "Opera inspired speed dial page for your bookmarks",

  "browser_action": {
    "default_icon": "logo.png",
    "default_title": "Super Speedy Dial"
  },

  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "chrome_settings_overrides": {
    "homepage": "index.html"
  },

  "permissions": [
    "bookmarks",
    "storage",
    "unlimitedStorage",
    "tabHide",
    "<all_urls>"
  ]
}
